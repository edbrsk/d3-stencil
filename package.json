{
  "name": "d3-stencil",
  "private": false,
  "version": "0.0.2",
  "description": "Components of Graphs build with StencilJS & D3.js",
  "homepage": "https://github.com/edgarordonez/d3-stencil",
  "keywords": [
    "Stencil",
    "D3.js",
    "Web Components",
    "Graphs"
  ],
  "author": "Edgar Ordóñez Rodríguez",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "module": "dist/esm/index.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "start": "stencil build --dev --watch --serve --esm",
    "build": "stencil build",
    "test": "stencil test --spec --e2e --coverage",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "lint": "yarn tslint --project tsconfig.json --fix",
    "sonar": "node sonar-properties.js",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "docs.data": "stencil build --docs-json path/to/docs.json"
  },
  "dependencies": {
    "d3": "^5.7.0",
    "object-assign-deep": "^0.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.3.2",
    "@commitlint/config-conventional": "^7.3.1",
    "@stencil/core": "latest",
    "@stencil/router": "^0.3.2",
    "@stencil/sass": "^0.1.1",
    "@stencil/utils": "latest",
    "@types/d3": "^5.7.0",
    "@types/jest": "^23.3.12",
    "@types/puppeteer": "1.11.1",
    "coveralls": "^3.0.2",
    "cz-conventional-changelog": "^2.1.0",
    "docusaurus": "^1.6.2",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "prettier": "^1.15.3",
    "puppeteer": "1.8.0",
    "sonarqube-scanner": "^2.1.2",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edgarordonez/d3-stencil.git"
  },
  "bugs": {
    "url": "https://github.com/edgarordonez/d3-stencil"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/@stencil/core/testing/jest.preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
